//---------------------------------------------------------------------------

#ifndef HashMapH
#define HashMapH
//---------------------------------------------------------------------------
#endif


class HashNode
{
public:
	AnsiString info;
	int key;
	HashNode* pNext;

	HashNode(int key,AnsiString value)
	{
	  this->info = value;
	  this->key = key;
	  pNext = nullptr;
	}
};


class HashMap
{
      HashNode **arr;
      int capacity;
      int size;

public:

	HashMap()
	{
	   capacity = 11;
           size = 0;
	   arr = new HashNode*[capacity];
	   for (int i=0; i<capacity; i++)
	   {
	      arr[i] = NULL;
	   }
	}

	int hashCode(int Key);
	void InsertNode(int key, AnsiString value);
	int sizeofMap();
	bool isEmpty();
	void display();
};
